                                    {{ form_label(formInfo.description) }}
                                    {{ form_widget(formInfo.description, { 'attr': {'class': 'form-control form-control-sm col-sm-9'}}) }}
                                </div>
                                {{ form_errors(formInfo.description) }}
                                <div class="form-group">
                                    {{ form_widget(formInfo.subEnregistrer, { 'attr': {'class': 'btn btn-default colorBtn'}}) }}
                                </div>

                                {{ form_rest(formInfo) }}
