                            <div class="formCenter">
                                {{ form_start(formInfo, {'method': 'POST',  'attr': {'id': 'FormInfo', 'role': 'form', 'class' : 'form-horizontal' }}) }}
                                <div class="form-group">
                                    {{ form_label(formInfo.photo) }}
                                    {{ form_widget(formInfo.photo, { 'attr': {'class': 'form-control form-control-sm col-sm-9'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(formInfo.nom) }}
                                    {{ form_widget(formInfo.nom, { 'attr': {'class': 'form-control form-control-sm col-sm-9'}}) }}
                                </div>
                                {{ form_errors(formInfo.nom) }}
                                <div class="form-group">
                                    {{ form_label(formInfo.prenom) }}
                                    {{ form_widget(formInfo.prenom, { 'attr': {'class': 'form-control form-control-sm col-sm-9'}}) }}
                                </div>
                                {{ form_errors(formInfo.prenom) }}
                                <div class="form-group">
                                    {{ form_label(formInfo.daten) }}
                                    {{ form_widget(formInfo.daten, { 'attr': {'class': ' form-control-sm col-sm-9'}}) }}
                                </div>
                                {{ form_errors(formInfo.daten) }}
